{
    "name": "university-lab-guide",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "validate:all": "node scripts/validate-markdown-guide.js",
        "validate:file": "node scripts/validate-markdown-guide.js",
        "validate:week": "node scripts/validate-markdown-guide.js public/content/week",
        "validate:advanced": "node scripts/validate-advanced.js",
        "validate:advanced:file": "node scripts/validate-advanced.js",
        "validate:lab-env": "node scripts/validate-lab-environments.js",
        "validate:lab-env:week": "node scripts/validate-lab-environments.js --week",
        "validate:lab-env:file": "node scripts/validate-lab-environments.js",
        "validate:file-contents": "node scripts/validate-file-contents.js",
        "validate:file-contents:week": "node scripts/validate-file-contents.js",
        "validate:progress": "bash scripts/check-progress.sh",
        "fix:auto": "bash scripts/fix-common-errors.sh",
        "review": "node scripts/comprehensive-review.js",
        "review:code": "node scripts/comprehensive-review.js --code",
        "review:guides": "node scripts/comprehensive-review.js --guides",
        "prepare": "husky install"
    },
    "dependencies": {
        "@cloudscape-design/code-view": "^3.0.98",
        "@cloudscape-design/components": "^3.0.0",
        "@cloudscape-design/global-styles": "^1.0.0",
        "buffer": "^6.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^9.0.0",
        "react-router-dom": "^6.20.0",
        "rehype-raw": "^7.0.0",
        "remark-gfm": "^4.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^1.0.0"
    }
}