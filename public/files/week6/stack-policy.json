{
    "Statement": [
        {
            "Effect": "Deny",
            "Principal": "*",
            "Action": [
                "Update:Replace",
                "Update:Delete"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ResourceType": [
                        "AWS::S3::Bucket"
                    ]
                }
            }
        },
        {
            "Effect": "Allow",
            "Principal": "*",
            "Action": "Update:*",
            "Resource": "*"
        }
    ]
}